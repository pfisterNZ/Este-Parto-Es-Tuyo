---
import Elipse from "../assets/Ellipse4.svg"

import Btn from "./CardsBtn/Btn.astro";
import CardInsta from "./CardsBtn/CardInsta.astro";
---

<div class="flex flex-col items-center justify-center gap-6 sm:gap-8 lg:gap-10 mt-6 sm:mt-8 lg:mt-10 w-full">
    <h2 class="text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold text-center w-full px-4 sm:px-6 lg:px-8">
        +2000 Mamás ya probaron éste programa. <span class="text-boybaby block sm:inline"> esto es lo que dicen algunas de ellas!</span>
    </h2>
    
    <!-- Instagram Publicacion  -->
    <div class="flex flex-col lg:flex-row items-center justify-center gap-6 sm:gap-8 lg:gap-10 px-4 sm:px-6 lg:px-8 w-full">
        <div class="flex-1 flex justify-center w-full lg:w-auto">
            <CardInsta url="https://www.instagram.com/p/DEsMPrWu73Z/" />
        </div>
        <img src={Elipse.src} alt="Elipse" class="w-auto h-[300px] sm:h-[400px] md:h-[500px] lg:h-[600px] xl:h-[700px] absolute -z-10 hidden lg:block" />
        <div class="flex-1 flex justify-center w-full lg:w-auto">
          <CardInsta url="https://www.instagram.com/p/DFNzPCiuTJD/" />
        </div>
    </div>

    <!-- Textos de whatsapp -->
     <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-8 lg:gap-10 w-full px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center justify-center gap-2 w-full sm:w-auto">
            <img src="/icons/whatsapp2.png" alt="whatsapp" class="w-full max-w-sm sm:max-w-md lg:max-w-lg xl:max-w-xl h-auto max-h-[200px] sm:max-h-[250px] md:max-h-[300px] lg:max-h-[350px] xl:max-h-[400px] object-contain" />
        </div>
        <div class="flex flex-col items-center justify-center gap-2 w-full sm:w-auto">
            <img src="/icons/whatsapp3.png" alt="whatsapp" class="w-full max-w-sm sm:max-w-md lg:max-w-lg xl:max-w-xl h-auto max-h-[200px] sm:max-h-[250px] md:max-h-[300px] lg:max-h-[350px] xl:max-h-[400px] object-contain" />
        </div>

     </div>

     <!-- Btn -->
     <div class="flex flex-col items-center justify-center my-6 sm:my-8 lg:my-10 w-full px-4 sm:px-6 lg:px-8">
        <Btn href="/" >
            QUIERO TENER MEJOR EXPERIENCIA EN MI PARTO »»   
        </Btn>
     </div>
</div>